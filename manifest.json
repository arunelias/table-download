{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.0",
    "homepage_url": "https://github.com/arunelias/table-download",
    "icons": {
        "16": "assets/icon/icon.svg",
        "32": "assets/icon/icon.svg",
        "48": "assets/icon/icon.svg",
        "64": "assets/icon/icon.svg",
        "128": "assets/icon/icon.svg"
    },
    "background":{
        "scripts": ["background.js"]
    },
    "browser_action":{
        "default_icon": "assets/icon/icon.svg",
        "default_title": "Table Download",
        "default_popup": "popup/popup.html"
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["inject/purify.min.js", "inject/cs.js"]
        }
    ],
    "default_locale": "en"
}